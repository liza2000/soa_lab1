<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <error-page>
        <exception-type>java.lang.NumberFormatException</exception-type>
        <location>/errorHandler</location>
    </error-page>
    <error-page>
        <exception-type>javax.persistence.PersistenceException</exception-type>
        <location>/errorHandler</location>
    </error-page>
    <error-page>
        <exception-type>javax.xml.bind.ValidationException</exception-type>
        <location>/errorHandler</location>
    </error-page>
    <error-page>
        <exception-type>java.text.ParseException</exception-type>
        <location>/errorHandler</location>
    </error-page>

    <servlet>
        <servlet-name>humanBeing</servlet-name>
        <servlet-class>ru.itmo.soa.servlet.HumanBeingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>humanBeing</servlet-name>
        <url-pattern>/human-being/*</url-pattern>
    </servlet-mapping>
</web-app>